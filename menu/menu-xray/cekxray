        netstat -anp | grep ESTABLISHED | grep xray | awk '{print $4,$5}' | sort | uniq > /tmp/anjay-login.txt
        cat /tmp/anjay-login.txt
fi
#
if [ -f "/var/log/xray/access.log" ]; then
echo ""
rm -r /tmp/xray-login.txt
